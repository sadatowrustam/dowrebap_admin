    <script>
        var tegs = [];
        var teg = document.querySelectorAll(".welayatSelect")[1];
        teg.addEventListener("change",function(){
            var choosen = document.querySelector(".choosenTeg");
            var goshma = false;
            for(var i = 0; i<tegs.length;i++){
                if(tegs[i] == teg.value){
                    goshma = true;
                    break;
                }
            }
            if(!goshma){
                tegs.push(teg.value);
                choosen.innerHTML+=`
                    <div><span>${teg.value}</span><img onclick="delArrTeg('${teg.value}',this)" src="/pictures/icon/minus.svg" alt=""></div>
                `
            }
        })

        function delArrTeg(teg,thiss){
            for(var i = 0; i<tegs.length; i++){
                if(teg == tegs[i]){
                    tegs.splice(i,1);
                }
            }
            thiss.parentNode.style.display = "none";
        }

    </script>
   


    <!-- picture show when i choose from file -->
    <script>
        var imgCount = 0;
        var delCount = 0;
        var imgs = [];
        function takeImg(event){
            if(event.target.files[0] != undefined){
                var imgCon = document.querySelector(".imgCon");
                imgCon.innerHTML += `
                                    <div class="div pdf ${delCount}">
                                        <img class="img" src="/pictures/icon/pdfRed.png" alt="hjhjhj">
                                        <div class="imgDelete" onclick="delImg(${delCount})"><img src="/pictures/icon/delete.svg"  alt=""></div>
                                        <div class="name"></div>
                                    </div>`;
                
                var img = document.querySelectorAll(".imgCon .div .name");

                img[imgCount].textContent = event.target.files[0].name;
                var obj = {
                    id:delCount,
                    event:event.target.files[0]
                }
                
                imgCount+=1;
                delCount+=1;
                imgs.push(obj);
                imgLen();
            }
        }

        function delImg(san){
            var imgCon = document.querySelectorAll(".imgCon .div");
            for(var i = 0; i<imgs.length; i++){
                if(imgs[i].id == san){
                    imgs.splice(i,1);
                }
            }

            for(var i = 0; i<imgCon.length ; i++){
                var a = imgCon[i].classList.contains(san);
                if(a){
                    imgCon[i].remove();
                    break;
                }
            }
            
            imgCount-=1;
            imgLen();
        }

        var bool = false;
        function imgLen(){
            if(imgs.length==0){
                var imgsCon = document.querySelector(".imgsCon");
                var imgCon = document.querySelector(".imgCon");
                imgCon.style.height = "0";
                var old = imgsCon.innerHTML;
                imgsCon.innerHTML = `<div class="noneImg" style="height:100px">
                                        <img style="filter: invert(1); opacity:0.7; width:30px" src="/pictures/icon/pdf.svg" alt="">
                                    </div>`+old;
                bool = true;
            }else if(imgs.length == 1 && bool){
                var imgNone = document.querySelector(".noneImg");
                imgNone.remove();
                var imgCon = document.querySelector(".imgCon");
                imgCon.style.height = "100px";
                bool = false;
            }
        }
        imgLen();

        var logo;
        function takeLogo(e){
            logo= e.target.files[0];
            var logoLabel = document.querySelector(".logoPlace label");
            logoLabel.textContent = e.target.files[0].name;
        }


        
    </script>

